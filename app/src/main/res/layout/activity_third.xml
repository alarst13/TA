<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThirdActivity"
    android:background="@drawable/red_background">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/camera_clickable_img"
        android:layout_centerInParent="true"
        android:layout_marginBottom="35dp"
        android:text="Please click on the image below ..."
        android:textSize="25dp"
        android:textStyle="bold"
        android:fontFamily="cursive"/>
    <ImageView
        android:id="@+id/camera_clickable_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:background="@drawable/ic_camera"
        android:layout_centerInParent="true"
      />
    <Button
        android:id="@+id/submit_btn_third_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="submit"
        android:textColor="#ffff"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:background="@drawable/second_selector"
        />
</RelativeLayout>